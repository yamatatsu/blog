<%
const title = 'やまたつBlog'
const description = '技術のことについていろいろ書いていく'
const url = 'https://blog.yamatatsu193.com/'
%>
<!DOCTYPE html>
<html ⚡ lang="ja">
  <head>
    <title><%= title %></title>
    <meta name="Description" content="<%= description %>" />
    <link rel="canonical" href="<%= url %>" />
    <%- include('_head', {}) %>
    <%- include('_ogp', { url, title, description, image: 'https://blog.yamatatsu193.com/images/logo.jpg' }) %>

    <script async custom-element="amp-analytics" src="https://cdn.ampproject.org/v0/amp-analytics-0.1.js"></script>
  </head>

  <body>
    <main id="content" role="main" class="mt4">
      <article class="recipe-article px3">
        <header class="mb4">
          <amp-img
            src="/images/logo.jpg"
            width="40"
            height="40"
            alt="Logo Yamatatsu"
          ></amp-img>
          <h1 class="mb1">
            やまたつ Blog
          </h1>

          <p>
            失敗とかも書いていきたい
          </p>
          <hr />
        </header>

        <ul class="list-reset">
          <% posts.forEach((post) => { %>
          <li class="mb4">
            <a href="./<%= post.filename %>">
              <h2 class="mb1"><%= post.postHeader.title %></h2>
            </a>
            <small><%= post.postHeader.date %></small>
            <p><%= post.postHeader.description %></p>
          </li>
          <% }); %>
        </ul>
        <hr />
      </article>
    </main>

    <%- include('_footer', {}) %> <%- include('_analytics', {}) %>
  </body>
</html>
